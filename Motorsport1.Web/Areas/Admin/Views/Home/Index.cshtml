@{
    ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> articles, teams and drivers.
    </p>
    <p class="lead mt-2">
        If you want you can add an <b>already existing</b> user to a <b>publisher</b> role.
    </p>
    <p class="lead mt-2">
        You can also see <b>all users and agents</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="Admin" asp-controller="Team" asp-action="Add"
       class="btn btn-primary btn-lg">Add Team</a>
    <a asp-area="Admin" asp-controller="Driver" asp-action="AddOld"
       class="btn btn-primary btn-lg">Add Driver</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="Home" asp-action="AddPublisher"
       class="btn btn-primary btn-lg">Add Publisher</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>