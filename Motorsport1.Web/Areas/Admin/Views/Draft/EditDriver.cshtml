@model DraftEditDriverViewModel;
@{
    ViewData["Title"] = "Edit driver`s draft price!";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Id"></label>
                <select asp-for="Id" class="form-control">
                    @foreach (var nameAndPrice in Model.NamesAndPrices)
                    {
                        <option value="@nameAndPrice.Id">@nameAndPrice.Name</option>
                    }
                </select>
                <span asp-validation-for="Id" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Edit Price...">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
