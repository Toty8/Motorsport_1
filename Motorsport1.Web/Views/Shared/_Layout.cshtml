@using static Motorsport1.Common.GeneralApplicationConstants;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Motorsport1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Motorsport1.Web.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
<partial name="_NotificationPartial"/>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="h4 text-light me-lg-5" asp-area="" asp-controller="Home" asp-action="Index">Motorsport 1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link h5 text-light" asp-area="" asp-controller="Article" asp-action="All">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link h5 text-light" asp-area="" asp-controller="Driver" asp-action="All">Drivers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link h5 text-light" asp-area="" asp-controller="Team" asp-action="All">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link h5 text-light" asp-area="" asp-controller="Standing" asp-action="Drivers">Standing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link h5 text-light" asp-area="" asp-controller="Draft" asp-action="Standing">Draft</a>
                        </li>
                        @if(this.User.IsPublisher())
                        {
                            <li class="nav-item">
                                <a class="nav-link h5 text-light" asp-area="" asp-controller="Article" asp-action="Mine">My Articles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link h5 text-light" asp-area="" asp-controller="Article" asp-action="Add">Add Article</a>
                            </li>
                            @if(this.User.IsAdmin())
                            {
                                <li class="nav-item">
                                    <a class="nav-link h5 text-light" asp-area="" asp-controller="Driver" asp-action="AddOld">Add Driver</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link h5 text-light" asp-area="" asp-controller="Team" asp-action="Add">Add Team</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Motorsport1 @ReleaseYear
            @if(ReleaseYear != DateTime.UtcNow.Year)
            {
                @Html.Raw($" - {DateTime.UtcNow.Year}");
            }
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
